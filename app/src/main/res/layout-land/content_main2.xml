<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Total"
        android:id="@+id/total_display_title_again"
        android:layout_column="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Guests:"
        android:id="@+id/spinner_title"
        android:layout_row="1"
        android:layout_column="0" />

    <Spinner
        android:layout_width="116dip"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_row="2"
        android:layout_column="0"
        android:max="30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Percent:"
        android:id="@+id/percentBarProgress"
        android:layout_row="3"
        android:layout_column="0" />
    <RadioGroup
        android:layout_height="50dip"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10%"
        android:id="@+id/tenPercent"
        android:layout_row="4"
        android:layout_column="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15%"
        android:id="@+id/fifteenPercent"
        android:layout_row="4"
        android:layout_column="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
            android:onClick="onRadioButtonClicked"    />

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18%"
        android:id="@+id/eighteenPercent"
        android:layout_row="4"
        android:layout_column="2"
        android:textAppearance="?android:attr/textAppearanceLarge"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25%"
        android:id="@+id/twentyFivePercent"
        android:layout_row="4"
        android:layout_column="3"
        android:textAppearance="?android:attr/textAppearanceLarge"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    <SeekBar
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:id="@+id/percentBar"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:max="30"/>

    <Button
        style="@style/LandButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:text="Calculate"
        android:id="@+id/Calculate"
        android:layout_row="6"
        android:layout_column="0"
        android:onClick="startCalc"/>

</GridLayout>