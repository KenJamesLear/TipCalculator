<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total:"
        android:id="@+id/total_display_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="1"
        android:id="@+id/one_button"
        android:layout_below="@+id/total_display_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="2"
        android:id="@+id/two_button"
        android:layout_alignTop="@+id/one_button"
        android:layout_toRightOf="@+id/one_button"
        android:layout_toEndOf="@+id/one_button" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="3"
        android:id="@+id/three_button"
        android:layout_below="@+id/total_display_title"
        android:layout_toRightOf="@+id/two_button" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="4"
        android:id="@+id/four_button"
        android:layout_below="@+id/one_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="5"
        android:id="@+id/five_button"
        android:layout_below="@+id/two_button"
        android:layout_toRightOf="@+id/one_button"
        android:layout_toEndOf="@+id/one_button" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="6"
        android:id="@+id/six_button"
        android:layout_below="@+id/three_button"
        android:layout_toRightOf="@+id/two_button"
        android:layout_toEndOf="@+id/two_button" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="7"
        android:id="@+id/seven_button"
        android:layout_below="@+id/four_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="8"
        android:id="@+id/eight_button"
        android:layout_alignTop="@+id/seven_button"
        android:layout_toRightOf="@+id/seven_button"
        android:layout_toEndOf="@+id/seven_button" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="9"
        android:id="@+id/nine_button"
        android:layout_alignTop="@+id/eight_button"
        android:layout_toRightOf="@+id/eight_button"
        android:layout_toEndOf="@+id/eight_button" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="BACK"
        android:id="@+id/back_button"
        android:layout_below="@+id/seven_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#E57373"/>

    <Button
        style ="@style/LandButtonStyle"
        android:text="0"
        android:id="@+id/zero_button"
        android:layout_below="@+id/eight_button"
        android:layout_toRightOf="@+id/back_button"
        android:layout_toEndOf="@+id/back_button" />

    <Button
        style ="@style/LandButtonStyle"
        android:text="NEXT"
        android:id="@+id/next_button"
        android:background="#4CAF50"
        android:layout_below="@+id/nine_button"
        android:layout_toRightOf="@+id/zero_button"
        android:layout_toEndOf="@+id/zero_button" />
</RelativeLayout>